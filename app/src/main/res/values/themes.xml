<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IProBonusTestApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="23">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_family</item>
        <item name="fontFamily">@font/open_sans_family</item>
    </style>

    <!--Стиль для текста логотипа -->
    <style name="IProBonusLogoText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Стиль для Заголовка-->
    <style name="IProBonusBoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--Стиль для обычного текста-->
    <style name="IProBonusRegularText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!--Стиль для заголовка диалогового окна-->
    <style name="IProBonusDialogHeader" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!--Стиль для сообщения диалогового окна-->
    <style name="IProBonusDialogMessage" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

</resources>